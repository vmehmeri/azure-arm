{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "spokeVnetName": {
      "type": "String"
    },
    "existingHubVnet": {
      "defaultValue": "HUB-vnet",
      "type": "String",
      "metadata": {
        "description": "Name of the existing HUB Vnet. Must match exactly."
      }
    },
    "existingHubResourceGroup": {
      "defaultValue": "CMN-HUB-VNET-rg",
      "type": "String",
      "metadata": {
        "description": "Name of the Resource Group where HUB VNet is deployed."
      }
    },
    "spokeVnetPrefix": {
      "type": "String"
    },
    "spokeAKSSubnetPrefix": {
      "type": "String"
    },
    "spokeAppSubnetPrefix": {
      "type": "String"
    },
    "spokeInfraSubnetPrefix": {
      "type": "String"
    },
    "spokeAppGwSubnetPrefix": {
      "type": "String"
    },
    "tagValues": {
      "type": "object",
      "defaultValue": {
        "environment": ""
      }
    }
  },
  "variables": {
    "hubSubscriptionId": "2d9b064d-01f4-42f7-9c17-27f5fd5ee68b",
    "subnetAKSName": "AKSSubnet",
    "subnetAppName": "ApplicationSubnet",
    "subnetInfraName": "InfraSubnet",
    "subnetAppGwName": "ApplicationGatewaySubnet",
    "hubID": "[resourceId(variables('hubSubscriptionId'), parameters('existingHubResourceGroup'), 'Microsoft.Network/virtualNetworks/', parameters('existingHubVnet'))]",
    "spokeID": "[resourceId('Microsoft.Network/virtualNetworks/', parameters('spokeVnetName'))]"
  },
  "resources": [
    {
      "comments": "Spoke Virtual Network (VNet)",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('spokeVnetName')]",
      "apiVersion": "2018-02-01",
      "location": "[resourceGroup().location]",
      "tags": "[parameters('tagValues')]",
      "scale": null,
      "properties": {
        "provisioningState": "Succeeded",
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('spokeVnetPrefix')]"
          ]
        },
        "dhcpOptions": {
          "dnsServers": []
        },
        "subnets": [

        ],
        "virtualNetworkPeerings": [],
        "enableDdosProtection": false,
        "enableVmProtection": false
      },
      "dependsOn": []
    },
    {
      "apiVersion": "2018-02-01",
      "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
      "name": "[concat(parameters('spokeVnetName'), '/Peering_', parameters('spokeVnetName'), '_', parameters('existingHubVnet'))]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[variables('spokeID')]"
      ],
      "properties": {
        "allowVirtualNetworkAccess": true,
        "allowForwardedTraffic": true,
        "allowGatewayTransit": false,
        "useRemoteGateways": true,
        "remoteVirtualNetwork": {
          "id": "[variables('hubID')]"
        }
      }
    },
    {
      "name": "HUB peering deployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-02-01",
      "subscriptionId": "[variables('hubSubscriptionId')]",
      "resourceGroup": "[parameters('existingHubResourceGroup')]",
      "dependsOn": [
        "[variables('spokeID')]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {},
          "resources": [
            {
              "apiVersion": "2018-02-01",
              "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
              "name": "[concat(parameters('existingHubVnet'), '/Peering_', parameters('existingHubVnet'), '_', parameters('spokeVnetName'))]",
              "location": "[resourceGroup().location]",
              "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": true,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                  "id": "[variables('spokeID')]"
                }
              }
            }
          ]
        }
      }
    },
    {
      "comments": "AKS Subnet",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(parameters('spokeVnetName'), '/', variables('subnetAKSName'))]",
      "apiVersion": "2018-02-01",
      "scale": null,
      "properties": {
        "provisioningState": "Succeeded",
        "addressPrefix": "[parameters('spokeAKSSubnetPrefix')]",
        "serviceEndpoints": []
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('spokeVnetName'))]"
      ]
    },
    {
      "comments": "Application Subnet",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(parameters('spokeVnetName'), '/', variables('subnetAppName'))]",
      "apiVersion": "2018-02-01",
      "scale": null,
      "properties": {
        "provisioningState": "Succeeded",
        "addressPrefix": "[parameters('spokeAppSubnetPrefix')]",
        "serviceEndpoints": []
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('spokeVnetName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('spokeVnetName'), variables('subnetAKSName'))]"
      ]
    },
    {
      "comments": "Infra Subnet",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(parameters('spokeVnetName'), '/', variables('subnetInfraName'))]",
      "apiVersion": "2018-02-01",
      "scale": null,
      "properties": {
        "provisioningState": "Succeeded",
        "addressPrefix": "[parameters('spokeInfraSubnetPrefix')]",
        "serviceEndpoints": []
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('spokeVnetName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('spokeVnetName'), variables('subnetAKSName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('spokeVnetName'), variables('subnetAppName'))]"
      ]
    },
    {
      "comments": "Application Gateway Subnet",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(parameters('spokeVnetName'), '/', variables('subnetAppGwName'))]",
      "apiVersion": "2018-02-01",
      "scale": null,
      "properties": {
        "provisioningState": "Succeeded",
        "addressPrefix": "[parameters('spokeAppGwSubnetPrefix')]",
        "serviceEndpoints": []
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('spokeVnetName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('spokeVnetName'), variables('subnetAKSName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('spokeVnetName'), variables('subnetAppName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('spokeVnetName'), variables('subnetInfraName'))]"
      ]
    }
  ]
}